@model TestingSystem.Model.Answer

@{
    ViewBag.Title = "Delete answer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	<h3>Are you sure you want to delete this?</h3>
	<div>
		<h4>Answer</h4>
		<hr />
		<dl>
			<dt>
				@Html.DisplayNameFor(model => model.Question.Text)
			</dt>

			<dd>
				@Html.DisplayFor(model => model.Question.Text)
			</dd>

			<dt>
				@Html.DisplayNameFor(model => model.Text)
			</dt>

			<dd>
				@Html.DisplayFor(model => model.Text)
			</dd>

			<dt>
				@Html.DisplayNameFor(model => model.isCorrect)
			</dt>

			<dd>
				@Html.DisplayFor(model => model.isCorrect)
			</dd>

		</dl>

		@using (Html.BeginForm())
		{
			@Html.AntiForgeryToken()
			@Html.Hidden("urlReferrer", ViewBag.UrlReferrer as string)

			<div>
				<input type="submit" value="Delete" class="btn btn-primary" /> |
				<a href="@ViewBag.UrlReferrer" class="btn btn-primary">Back</a>
			</div>
		}
	</div>
</div>