@model IEnumerable<TestingSystem.Model.Answer>

<p>
    @Html.ActionLink("Create New", "Create", "Answer")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isCorrect)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuestionId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isCorrect)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Answer", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", "Answer", new { id=item.Id })
            </td>
        </tr>
    }

</table>
