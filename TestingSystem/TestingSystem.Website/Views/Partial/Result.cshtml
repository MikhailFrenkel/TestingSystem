@model PagedList.IPagedList<TestingSystem.Model.Result>
@using PagedList.Mvc
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<h4>Your tests results:</h4>
<table class="table">
    <tr>
        <th>Test</th>
        <th>Count Correct Questions</th>
        <th>Count Questions</th>
        <th>Date of passing</th>
    </tr>
    @if (Model.Count != 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.TestName</td>
                <td>@item.CountCorrectQuestion</td>
                <td>@item.CountQuestions</td>
                <td>@item.DateOfPassing</td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="4" align="center"><span style="font-size: 16px;">You haven't any results</span></td>
        </tr>
    }
</table>

Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
