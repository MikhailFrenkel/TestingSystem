@model TestingSystem.Model.Theme

@{
    ViewBag.Title = "Edit theme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()
		@Html.Hidden("urlReferrer", ViewBag.UrlReferrer as string)

		<div class="container">
			<h4>Theme</h4>
			<hr />
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			@Html.HiddenFor(model => model.Id)

			<div class="form-group">
				@Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "col-form-label col-md-2 font-weight-bold" })
				<div class="col-md-6">
					@Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				<div class="col-md-10">
					<input type="submit" value="Save" class="btn btn-primary" /> |
					<a href="@ViewBag.UrlReferrer" class="btn btn-primary">Back</a>
				</div>
			</div>
		</div>
	}
</div>
